.vnt-gc-image-wrapper, .vnt-gc-video-wrapper {
	position: relative;
}

.vnt-gc-image-wrapper img, .vnt-gc-video-wrapper video {
	position: absolute;
  padding: 20px;
  width: 100%;
}

@media only screen and (min-width: 768px) {
  .vnt-gc-image-wrapper img, .vnt-gc-video-wrapper video {
  	width: 45%;
    left: 7%;
    top: 33px;
  }
  .new-edit-top__right {
  margin-top: 0;
}
}

@media only screen and (min-width: 1200px) {
  .vnt-gc-image-wrapper img, .vnt-gc-video-wrapper video {
    width: 40%;
  	left: 17%;
    top: 136px;
  }
}

@media only screen and (min-width: 2000px) {
  .vnt-gc-image-wrapper img, .vnt-gc-video-wrapper video {
    width: 36%;
  	left: 19%;
  }
}

.new-edit-top__right {
  margin-top: 30px;
}
.new-edit-top {
  padding-bottom: 0;
}

