/*** RACING SERIES **/
.template-collection .ccm-image-slider-container .rslides_tabs {
	padding-left: 0;	padding-top: 15px;	padding-bottom: 10px;	position: relative;	text-align: center;	bottom: 0;	z-index: 500
}
.template-collection .ccm-image-slider-container .rslides_tabs li {
	list-style-type: none;	display: inline-block;	margin-right: 10px
}
.template-collection .ccm-image-slider-container .rslides_tabs li.rslides_here a {
	background: #3b3b3b;	border: 3px solid #e4e4e4
}
.template-collection .ccm-image-slider-container .rslides_tabs li a {
	overflow: hidden;	text-indent: 99px;	background: #ccccc9;	width: 20px;	height: 20px;	display: inline-block;	margin-right: 10px;	-webkit-border-radius: 60px;	-moz-border-radius: 60px;	border-radius: 60px;	-ms-border-radius: 60px
}
.template-collection .ccm-image-slider-text {
	background: rgba(35, 35, 35, 0.7);	color: #CCC;	padding: 20px;	width: 100%;	height: 100%;	font-size: 1em;	top: 0;	left: 0;	text-align: center
}
.template-collection .ccm-image-slider-text h2 {
	font-size: 1.2em;	letter-spacing: .2em
}

@media (min-width: 768px) {
	.template-collection .ccm-image-slider-container .rslides_tabs {
		bottom: 70px
	}
	.template-collection .ccm-image-slider-text {
		background: rgba(35, 35, 35, 0);	text-align: left;	color: #FFF;	width: 100%;	height: 100%;	font-size: 1.1em
	}
	.template-collection .ccm-image-slider-text-block {
		position: absolute;	bottom: 30px;	padding-left: 10% 
	}
	.template-collection .ccm-image-slider-title-wrapper {
		display: block;	margin-bottom: 2px;	font-size: 1.7em
	}
	.template-collection .ccm-image-slider-text h2,  .template-collection .ccm-image-slider-text p {
		display: block
	}
	.template-collection .ccm-image-slider-text p {
		letter-spacing: .08em;	padding-bottom: 15px;	color: #fff;font-size:13px;
	}
	.template-collection .ccm-image-slider-text p a {
		text-transform: uppercase;	border: 1px solid #fff;	margin-top: 25px;	padding: 17px;	color: #fff;	letter-spacing: .09em;	-webkit-transition: all .4s ease-in-out;	-moz-transition: all .4s ease-in-out;	-o-transition: all .4s ease-in-out;	transition: all .4s ease-in-out
	}
}

@media (min-width: 992px) {
  .ccm-image-slider-text-block p {
      width: 60%
  }
}

