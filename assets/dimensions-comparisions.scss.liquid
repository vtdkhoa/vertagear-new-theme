body {
    background-color: #222222;
    font-family: "Roboto", "Helvetica", san-serif;
    color: #fff;
  }
  
  #bio-selector {
    background-color: #222222;
    width: 100%;
  }
  
  #assets {
    display: none;
  }
  
  .two-display {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    /*background-color: #373737;*/
    background-color: white;
    width: 1000px;
    margin: auto;
    /*height: 525px*/
    padding: 35px 20px;
  }
  
  #chair-side, #chair-front {
    background-repeat: no-repeat;
    height: 500px;
    background-size: contain;
  }
  
  #chair-side {
    background-image: url("{{ 'side-sl2000.png' | asset_img_url: '500x' }}");
    width: 500px;
  }
  
  #chair-side svg {
    position: absolute;
    bottom: -55px;
    left: 12px;
  }
  
  #chair-front {
    background-image: url("{{ 'front-sl2000.png' | asset_img_url: '500x' }}");
    width: 500px;
  }
  
  #chair-front svg {
    position: absolute;
    bottom: -55px;
    left: 91px;
  }
  
  .side-bg {
    background-image: url("{{ 'side-background.png' | asset_img_url: '500x' }}");
  }
  
  .front-bg {
    background-image: url("{{ 'front-background.png' | asset_img_url: '500x' }}");
  }
  
  
  .value-control {
    max-width: 1000px;
    background-color: #fff;
    margin: 10px auto;
    padding: 20px;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-justify-content: space-around;
        -ms-flex-pack: distribute;
            justify-content: space-around;
  }
  .value-control .radios.gender {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-justify-content: space-around;
        -ms-flex-pack: distribute;
            justify-content: space-around;
    background-color: #fff;
    font-size: 24px;
  }
  .value-control .radios.gender h4 {
    color: #595959;
    font-size: 14px;
  }
  .value-control .radios.gender label {
    background-color: #FFF;
    color: #909090;
    padding: 20px;
    margin: 0;
    cursor: pointer;
    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
  }
  .value-control .radios.gender label:hover {
    background-color: #e0e0e0;
    border-radius: 4px;
  }
  .value-control .radios.gender label span {
    font-weight: 400;
    padding-bottom: 10px;
  }
  .value-control .radios.gender label input:checked + span {
    color: #595959;
  }
  .value-control .radios.gender label input:checked + span.radio-text-female {
    border-bottom: 3px solid #D0011B;
  }
  .value-control .radios.gender label input:checked + span.radio-text-male {
    border-bottom: 3px solid #4990E2;
  }
  .value-control .slider-weight-height {
    max-width: 80%;
    width: 100%;
    background-color: #FFF;
    border-left: 1px solid #909090;
  }
  .value-control .slider-weight-height .col-weight, .value-control .slider-weight-height .col-height {
    background-color: #FFF;
    color: #909090;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: end;
    -webkit-align-items: flex-end;
        -ms-flex-align: end;
            align-items: flex-end;
    margin: 5px;
  }
  .value-control .slider-weight-height .col-weight label, .value-control .slider-weight-height .col-height label {
    width: 15%;
    font-weight: 300;
    text-align: right;
    margin-right: 5%;
  }
  .value-control .slider-weight-height .col-weight label h4, .value-control .slider-weight-height .col-height label h4 {
    color: #595959;
    font-size: 14px;
  }
  .value-control .slider-weight-height .col-weight label span, .value-control .slider-weight-height .col-height label span {
    font-size: 24px;
    color: #909090;
    font-weight: 100;
  }
  .value-control .slider-weight-height input[type="range"] {
    width: 80%;
    height: 50px;
    display: block;
    -webkit-appearance: none;
       -moz-appearance: none;
            appearance: none;
    background-color: #595959;
    margin-bottom: 10px;
    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
  }
  .value-control .slider-weight-height input[type="range"]:focus {
    outline: none;
    background-color: #909090;
  }
  .value-control .slider-weight-height input[type="range"]::-webkit-slider-runnable-track {
    -webkit-appearance: none;
            appearance: none;
    box-sizing: border-box;
    padding: 5px;
  }
  .value-control .slider-weight-height input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
            appearance: none;
    background-color: #e0e0e0;
    width: 20px;
    height: 50px;
    cursor: pointer;
    border-radius: 4px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    -webkit-transition: all 0.3s ease;
    transition: all 0.3s ease;
  }
  .value-control .slider-weight-height input[type="range"]::-webkit-slider-thumb:hover {
    background-color: #fff;
  }
  
  .model-collections {
    width: 100%;
    max-width: 1080px;
    margin: 10px auto;
    margin-top: -15px;
    background-color: #626262;
  }
  .model-collections .model-thumbs > ul {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
        -ms-flex-direction: row;
            flex-direction: row;
    list-style: none;
    padding: 0;
  }
  .model-collections .model-thumbs > ul li {
    height: 300px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }
  .model-collections .model-thumbs > ul li img {
    width: auto;
    height: 100%;
    margin: 0 auto;
    opacity: 1;
  }
  
  .model-collections .model-thumbs > ul li img:hover {
    opacity: 1;
  }
  .model-collections .model-thumbs > ul li .sn-info {
    position: absolute;
    /*background-color: rgba(0, 0, 0, 0.5);*/
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 24px;
    line-height: 100px;
    text-align: center;
    opacity: 0;
    -webkit-transition: opacity 0.2s ease;
    transition: opacity 0.2s ease;
  }
  .model-collections .model-thumbs > ul li:hover {
    opacity: 1;
    background: url("{{ 'spotlight.png' | asset_img_url: '500x' }}") no-repeat;
    background-size: contain;
    background-position: 50%;
  }
  
  .model-collections .model-thumbs > ul li .sn-info:hover {
    opacity: 1;
  }
  
  .model-collections .model-thumbs > ul li .sn-info-active {
    opacity: 1;
  }
  
  .active {
    opacity: 1;
    background: url("{{ 'spotlight.png' | asset_img_url: '500x' }}") no-repeat;
    background-size: contain;
    background-position: 50%;
    filter: brightness(105%) !important;
    -webkit-filter: brightness(105%);
    -moz-filter: brightness(105%);
    -o-filter: brightness(105%);
    -ms-filter: brightness(105%);
  }
  
