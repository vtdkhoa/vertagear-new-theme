$tablet-breakpoint: "768px";
$desktop-breakpoint: "1024px";
$fhd-breakpoint: "1920px";

.absolute_center{
  margin: auto;
  position: absolute;
  top: 0; left: 0; bottom: 0; right: 0;
}
.col-centered{
    float: none;
    margin: 0 auto;
}

.red-border{
  border-bottom: 6px solid #ffa91e;
}
 
.template-page#spacestation-gaming{
  .main-content{
    padding:0;
    max-width: inherit;
    .hero-wrapper{
        background-image: url("{{ 'SSG-Page-Header-mobile.jpg' | asset_url }}");
        background-size: 100%;
    	background-position: bottom center;
        text-align: center;
        height: 475px;
        @media screen and (min-width: $tablet-breakpoint) {
          height: 750px;
        }
        @media screen and (min-width: $desktop-breakpoint) {
          background-image: url("{{ 'SSG-Page-Header.jpg' | asset_url }}");
          height: 500px;
          background-size: 100% 100%;
          background-position: center;
        }
        @media screen and (min-width: $fhd-breakpoint) {
          height: 600px;
        }
        .hero-logo{
          height: 225px;
          @media screen and (min-width: $tablet-breakpoint) {
            height: 300px;
          }
          @media screen and (min-width: $desktop-breakpoint) {
            height: 500px;
          }
          @media screen and (min-width: $fhd-breakpoint) {
            height: 600px;
          }
    	  position: relative;
          img{
            height: 125px;
            @media screen and (min-width: $tablet-breakpoint) {
              height: 200px;
            }
          	@media screen and (min-width: $desktop-breakpoint) {
              height: auto;
            }
          }
   	 	}
    	.hero-product{
          height: 250px;
    	  position: relative;
          @media screen and (min-width: $tablet-breakpoint) {
            height: 450px;
          }
          @media screen and (min-width: $desktop-breakpoint) {
            height: 500px;
          }
          @media screen and (min-width: $fhd-breakpoint) {
            height: 600px;
          }
          img{
            height: 225px;
            bottom: 0;
            top: auto;
            @media screen and (min-width: $tablet-breakpoint) {
              height: auto;
              max-height: 500px;
            }
            @media screen and (min-width: $fhd-breakpoint) {
              max-height: 600px;
            }
          }
        }
    }
  	.about-wrapper{
        background-image: url("{{ 'fazeclan-about-bg.jpg' | asset_url }}");
        background-size: auto;
        background-position: top center;
        text-align: center;
        border-top: 3px solid #FFF;
        padding: 200px 0 150px;
        @media screen and (min-width: $desktop-breakpoint) {
          	background-size: 100% 100%;
            background-position: center;
        }
    }
  
  	.gallery-wrapper{
        background-image: url("{{ 'ssg-about-bg-mobile-min.png' | asset_url }}");
        background-size: 100%;
        background-position: top center;
        text-align: center;
        border-top: 3px solid #FFF;
        padding: 90px 0 60px;
        @media screen and (min-width: $tablet-breakpoint) {
          padding: 140px 0 40px;
        }
        @media screen and (min-width: $desktop-breakpoint) {
          	padding: 130px 0 55px;
          	background-image: url("{{ 'ssg-about-bg-min.png' | asset_url }}");
          	background-size: 100% 100%;
            background-position: center;
        }
          p{
          	margin-top: 50px;
          }
        
        .slick-slide{
      		margin-right: 10px;
            img{
            	width: 100%;
            }
        }
    }
  	
  	
  	.product-wrapper{
      background-image: url("{{ 'SSG-Chair-bg-mobile-min.jpg' | asset_url }}");
        background-size: 100%;
        background-position: center;
      @media screen and (min-width: $desktop-breakpoint) {
        	background-image: url("{{ 'SSG-Chair-bg-min.jpg' | asset_url }}");
        }
      h4{
      	font-size:14px;
        font-weight: bold;
      }
      .red-alert-product{
        padding:0 0 50px;
        position: relative;
        @media screen and (min-width: $desktop-breakpoint) {
        	margin-top: -50px;
        }
        img{
        	width: 250px;
        	margin: 0 auto;
        }
        .node{
          position: absolute; 
          width: 38px;    
          height: 38px;   
          margin: -20px 0 0 -20px;    
          opacity: 1; 
          cursor: pointer;    
          background-image: url("{{ 'tooltip-node.png' | asset_url }}");   
          -webkit-transition: all 1s ease;   
           -moz-transition: all 1s ease;   
           -ms-transition: all 1s ease;    
           -o-transition: all 1s ease; 
            transition: all 1s ease;
          @media screen and (min-width: $desktop-breakpoint) {
            opacity:1;
          }
          &:hover{
            background-image: url("{{ 'tooltip-node-active.png' | asset_url }}");
          }
          &.node1{
            top: 16%;
    		left: 45%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 48%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
              	left: 45%;
            	top: 21%;
            }
          }
          &.node2{
            top: 10%;
    		left: 70%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 59%;
              	top: 10%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
            	top: 12%;
    			left: 66%;
            }
          }
          &.node3{
            top: 15%;
    		left: 80%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 64%;
              	top: 15%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
            	top: 20%;
    			left: 75%;
            }
          }
          &.node4{
            top: 20%;
    		left: 62%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 57%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
              top: 25%;
    		  left: 60%;
            }
          }
          &.node5{
            top: 37%;
    		left: 75%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 63%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
              top: 47%;
    		  left: 72%;
            }
          }
          &.node6{
            top: 51%;
    		left: 51%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 51%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
              top: 68%;
              left: 52%;
            }
          }
          &.node7{
            top: 62%;
    		left: 54%;
            @media screen and (min-width: $desktop-breakpoint) {
              top: 79%;
    		  left: 56%;
            }
          }
          &.node8{
            top: 66%;
    		left: 77%;
            @media screen and (min-width: $tablet-breakpoint) {
           		left: 63%;
              	top: 66%;
            }
            @media screen and (min-width: $desktop-breakpoint) {
              top: 86%;
    		  left: 72%;
            }
          }
        }
      }
      &.snow-storm{
      	.red-alert-product{
          .node{
            &.node6{
        		left: 53%;
        	  @media screen and (min-width: $tablet-breakpoint) {
           		left: 52%;
              }
              @media screen and (min-width: $desktop-breakpoint) {
                top: 65%;
                left: 53%;
              }
            }
            &.node7{
              @media screen and (min-width: $desktop-breakpoint) {
                top: 76%;
                left: 60%;
              }
            }
            &.node8{
              top: 65%;
              left: 75%;
              @media screen and (min-width: $tablet-breakpoint) {
           		left: 61%;
              }
              @media screen and (min-width: $desktop-breakpoint) {
                top: 86%;
                left: 70%;
              }
            }
          }
        }
      }
      .red-alert-feat{
        padding:0 0 50px;
        @media screen and (min-width: $desktop-breakpoint) {
          padding:125px 0 50px;
        }
        .red-alert-feat-slider{
          	@media screen and (max-width: $tablet-breakpoint) {
        		float:none;
            	margin: 0 auto;
            }
        }
      }
      .slick-vertical{
        .slick-slide{
      		margin-bottom: 10px;
        }
      }
      .slider{
        figure{
          .text{
            background-color: #313131;
            padding: 10px;
            color: #FFF;
          }
          img{
            width: 100%;
          }
        }
      }
    }
  }

  .slick-dots {
    bottom: -40px;
    li {
    	margin:0;
    	button:before{
          font-size: 45px;
          color: #717171;
        }
    }
  }
  
   .buy-now{
     text-align: center;
     padding: 50px 0 40px;
     @media screen and (min-width: $desktop-breakpoint) {
       padding: 50px 0 0;
       text-align: left;
     }
   }

   .buy-now-link a{
    	background-color: #c21819;
        color: #FFF;
        display: block;
        width: 125px;
        padding: 5px;
        margin-top: 30px;
        text-align: center;
      	font-weight: bold;
        text-decoration: none;
     	position: relative;
        z-index:10;
   }

   .buy-now-bottom{
     text-align: center;
     padding-top: 50px;
     a{
    	background-color: #c21819;
        color: #FFF;
        display: block;
        width: 180px;
        padding: 15px;
        margin: 30px auto 0;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
     }
   }
	
   select{
   	background-color: #FFF;
   }
}