$min-mobile-breakpoint: 414px;
$min-tablet-breakpoint: 768px;
.buy-now-template {
  width: 100%;
  //background-color: #E6E6E6;
  background-color: #fff;
  font-family: 'Ubuntu', 'Open Sans', sans-serif;
  margin-top: 40px;
  .bin-container {
    @media screen and (min-width: 768px) {
      width:768px;
    }
    @media screen and (min-width: 1000px) {
      width: 1000px;
    }
    background-color: #FFFFFF;
    margin: auto;
    height: auto;
    .content-columns {
        display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
        display: -ms-flexbox;  /* TWEENER - IE 10 */
        display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
        display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
      flex-direction: column;
      @media screen and (min-width: 768px) {
        flex-direction: row;
      }
      width: 100%;
      .product-images {
        width: 100%;
        height:430px;
        padding: 20px;
        padding-bottom:0;
        @media screen and (min-width: $min-tablet-breakpoint) {
          height: 450px; // 410 + 40 (padding)
          border: 2px solid #f5f5f5;
          padding-bottom:20px;
          width: 37%;
          margin-right:3%;
        }
        //background-color: #f5f5f5;
        overflow: hidden;
        position: relative;
        .pi-slider{
          .slick-arrow{
            top:40px;
          }
          .slick-prev {
            left: -20px;
            z-index: 999;
            @media screen and (min-width: 767px) {
              left: -20px;
            }
          }
          .slick-next {
            right: -20px;
            @media screen and (min-width: 767px) {
              right: -20px;
            }
          }
          .slider-item{
            cursor: pointer;
            padding-right:2px;
            img{
              border:2px solid #f5f5f5;
              &:hover{
                border:2px solid #000; 
              }
            }
          }
        }
        .pi-slider-items{
          display:none;
        }
        /*height: 370px;
        @media screen and (min-width: 360px) {
        	height: 400px;
        }
        @media screen and (min-width: 412px) {
        	height: 465px;
        }
        @media screen and (min-width: 768px) {
          height: 430px;
        }
        @media screen and (min-width: 1000px) {
        	height: 560px;
        }*/
        .grid {
          padding: 0;
          margin-left: 0;
        }
        .product_thumbnail_wrapper {
          position: absolute;
          margin-left: 5px;
          bottom: -40px;
          width: 85%;
          @media screen and (min-width: 360px) {
          	width: 87%;
          }
          @media screen and (min-width: 412px) {
          	width: 88%;
            bottom: -15px;
          }
          @media screen and (min-width: 768px) {
            bottom: -35px;
            width: 90%;
          }
          @media screen and (min-width: 1000px) {
          	bottom: 0;
          }
          height: 110px;
          z-index: 50;
          .product_thumbnails {
            cursor: pointer;
          }
          .slick-prev:before, .slick-next:before { 
              color:red !important;
          }
        }
      }
      .product-modifier {
        flex: 2;
        width: 100%;
        @media screen and (min-width: $min-tablet-breakpoint) {
          width: 40%;
        }
          display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
          display: -ms-flexbox;  /* TWEENER - IE 10 */
          display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
          display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
        flex-direction: column-reverse;
        @media screen and (min-width: $min-tablet-breakpoint) {
          flex-direction: column;
        }
        h1{
          margin: 0; 
        }
        padding: 20px;
        padding-top:0;
        @media screen and (min-width: $min-tablet-breakpoint) {
          padding-top:20px;
          padding-right:40px;
        }
        label.product-label, label.quantity-selector{
          display:block;
          font-weight: normal !important;
          font-size: 14px;
          text-transform: none;
          color: #000;
        }
        .product-title {
          font-size: 36px;
          font-weight: 600;
          color: rgb(51, 51, 51);
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
        }
        .product-base-price {
          color: rgb(119, 164, 100);
          font-size: 17.5px;
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
          margin-bottom: 10px;
        }
        .product-description {
          color: rgb(110, 110, 110);
          font-size: 13px;
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
          margin-bottom: 10px;
        }
        .product-label {
          color: rgb(0, 0, 0);
          font-size: 16px;
          font-weight: bold;
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
          padding-right: 5px;
          //vertical-align: middle;
        }
        .upgrade-heading {
          font-size: 24px;
          font-weight: bold;
          color: rgb(0, 0, 0);
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
        }
        .color-swatch {
          margin-bottom: 15px;
          img {
            cursor: pointer;
          }
        }
        .swatch {
          cursor: pointer;
        }
        .upgrade-options {
          margin-bottom: 13px;
          #SingleOptionSelector-color {
            display: none;
          }
        }
        .hide-me {
          display: none;
        }
        .form-control {
          color: rgb(110, 110, 110);
          font-size: 13px;
          height: 20px;
          padding: 0px 5px;
          padding-right: 28px;
          display: inline-block;
          min-width: 0 !important;
          background-color: #F3F3F3;
          font-family: 'Ubuntu', 'Open Sans', sans-serif;
        }
        select.form-control{
          width: 100%;
          height: 40px;
          padding-left: 15px;
          background-color: #fff;
          margin-top: 10px;
          border-width: 2px;
        }
        .final-total {
          font-weight: 700;
          font-size: 14px;
        }
        .price-total {
          color: #77A464;
          font-size: 1.25em;
          font-weight: bold;
        }
        .js-qty {
          max-width: 140px !important;
          height: 40px;
          display: block;
          margin-right: 10px;
          //margin-left: 10px;
          margin-bottom: 0;
          border:1px solid #e5e6e7;
          .js-qty__num{
          	//width:50px;
            padding: 0 40px;
            line-height:40px;
            //width: 50px;
            //display:inline-block;
          }
          .js-qty__adjust{
            //width: 50px;
            //position: relative;
            line-height:10px;
            opacity: 1 !important;
            background-color: #f6f7f8;
            color: #b5b5b7;
            padding: 15px 18px !important;
            display:inline-block;
          }
          .js-qty__adjust:hover{
            background-color:#6f7071;
            color: #fff;
          }
        }
        #AddToCart {
          font-weight:bold;
          background-color: #ea3338;
          padding: 10px 30px;
          font-size: 14px;
          border-radius: 3px;
          &:hover{
            background-color: #f5f6f7;
            color: #000;
          }
        }
      }
      .top-rated-products{
        //flex: 1;
        width: 100%;
        padding: 10px;
        text-align:center;
        @media screen and (min-width: $min-tablet-breakpoint) {
          width:20%;
        }
        h2{
          font-size: 20px;
          font-weight: bold;
          margin-bottom: 0;
        }
        .trp-container{
          .trp-item-wrapper{
            padding:2px;
            .trp-item{
              width:100%;
              position:relative;
              padding: 10px;
              text-align:center;
              transition: background-color 0.5s ease;
              .yotpo .star-clickable a{
                display:none; 
              }
              .trp-price{
                font-weight: bold; 
                //margin-bottom: 10px;
              }
              a:hover{
                color: #000;
                text-decoration: none;
              }
              &:hover{
                -webkit-box-shadow: 0px 0px 15px 0px rgba(133,133,133,0.2);
                -moz-box-shadow: 0px 0px 15px 0px rgba(133,133,133,0.2);
                box-shadow: 0px 0px 15px 0px rgba(133,133,133,0.2);
                //background-color: #f5f5f5; 
              }
            }
          }
          // theres an issue here...
          /*
          .slick-active:nth-child(2) .trp-item::before{
            height: 80%;
            content: "\00a0";
            position:absolute;
            top: 10%;
            left:0;
            border-left: 1px solid #b3b3b3;
          }
          */
          @media screen and (min-width: $min-tablet-breakpoint) {
            .slick-active > *:nth-of-type(2){
              border-top: 1px solid #e7e8e9; // #b3b3b3
            }
          }
        }
        .trp-arrows{
          position: relative;
          width:80px;
          height:24px;
          margin:auto;
          .trp-arrow{
          // 15 by 15 arrows
            position:absolute;
            height:100%;
            line-height: 24px;
            color: #b5b6b7;
            &:hover{
              color:#000;
              cursor:pointer;
            }
          }
          .trp-arrow-prev{
            left:0;
          }
          .trp-arrow-next{
             right:0;
          }
          &::before{
            width: 24px;
            content: "\00a0";
            height:0;
            border-bottom: 2px solid #e1e3e3;
            position:absolute;
            top: 11px;
            left: 28px;
          }
          /*
          .slick-arrow{
            top: 15px; 
          }
          .slick-prev{
            left: 30%
          }
		  .slick-next{
            right: 30%; 
          }
          */
        }
      }
    }
    .tabs-wrapper{
      ul.tabs{
        margin-bottom:0;
        border-bottom: 0;
        li{
          height:50px;
          a{
          	height:50px;
            line-height:10px;
            padding:20px 40px; 
            background-color: #fff;
            border: 0;
          }
          a.active{
      		background-color: #f5f5f5;
          }
        }
      }
      >*:not(:first-child){
      	background-color: #f5f5f5;
      }
      div{
        padding:25px;
      }
    }
    .specifications {
      width: 100%;
      height: auto;
      box-sizing: border-box;
      padding: 20px;
      
      p {
        font-size: 14px;
        margin-bottom: 5px;
      }
    }
  }
}