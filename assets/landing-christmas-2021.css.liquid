        .ld-hero {
            width: 100%;
            background-color: #222;

            position: relative;
          background-image: url("{{ 'ld-hero-bg-mobile-v2.jpg' }}");
            background-size: cover;
            background-position: center;
            font-family: texgyreadventor;
            margin-top: 65px;
            height: 800px;
        }

        .ld-hero__text {
            width: 90%;
            margin: auto;
            text-align: center;
            padding-top: 12%;
        }

        .ld-hero__text__event {
            font-weight: bold;
            font-size: 17px;
            letter-spacing: 0;
            background: linear-gradient(to right, #05B857 0%, #058DB8 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }

        .ld-hero__text__slogan {
            color: #fff;
            font-weight: bold;
            font-size: 30px;
            margin: 0;
            line-height: 1.2;
        }

        .ld-hero__text__desc {
            color: #fff;
            font-size: 15px;
            line-height: 1.5;
            letter-spacing: 1.5px;
            margin: 30px 10px;
        }

        .ld-hero__text__cta {
            color: #fff;
            display: flex;
            flex-direction: column;
            gap: 20px;
          margin-bottom: 10px;
        }

        .ld-hero__text__cta__btn {
            background: transparent;
            border: 1px solid #fff;
            padding: 10px 30px;
            color: #fff;
            cursor: pointer;
            font-size: 20px;
            width: 85%;
            margin: auto;
        }

        .ld-hero__text__cta__btn__title {
            font-size: 16px;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .ld-hero__text__cta__btn__interest {
            font-size: 14px;
        }
  
  		.ld-hero__text__cta__text {
          color: #fff;
        }

        .ld-hero__am__imgs {
            background-size: cover;
            background-position: center;
            height: 400px;
            animation-name: ld-hero__am-mobile;
            animation-duration: 40s;
            animation-iteration-count: infinite;
        }

        @keyframes ld-hero__am-mobile {
            12% {
              background-image: url("{{ 'ld-banner-chair1-mobile-compressed.png' | asset_url }}");
            }

            20% {
                background-image: url("{{ 'ld-banner-chair2-mobile-compressed.png' | asset_url }}");
            }

            28% {
                background-image: url("{{ 'ld-banner-chair3-mobile-compressed.png' | asset_url }}");
            }

            36% {
                background-image: url("{{ 'ld-banner-chair4-mobile-compressed.png' | asset_url }}");
            }

            44% {
                background-image: url("{{ 'ld-banner-chair5-mobile-compressed.png' | asset_url }}");
            }

            52% {
                background-image: url("{{ 'ld-banner-chair6-mobile-compressed.png' | asset_url }}");
            }

            60% {
                background-image: url("{{ 'ld-banner-chair7-mobile-compressed.png' | asset_url }}");
            }

            68% {
                background-image: url("{{ 'ld-banner-chair8-mobile-compressed.png' | asset_url }}");
            }

            76% {
                background-image: url("{{ 'ld-banner-chair9-mobile-compressed.png' | asset_url }}");
            }

            84% {
                background-image: url("{{ 'ld-banner-chair10-mobile-compressed-updated.png' | asset_url }}");
            }

            92% {
                background-image: url("{{ 'ld-banner-chair11-mobile-compressed.png' | asset_url }}");
            }

            100% {
                background-image: url("{{ 'ld-banner-chair12-mobile-compressed.png' | asset_url }}");
            }
        }

        .ld-hero__linear-gradient {
            width: 100%;
            height: 10%;
            position: absolute;
            bottom: 0;
            left: 0;
            background: linear-gradient(180deg, #11100D 0%, rgba(17, 16, 13, 0) 100%);
            transform: matrix(1, 0, 0, -1, 0, 0);
        }

        .ld-reason {
            background-color: #11100D;
            color: #fff;
        }

        .ld-reason__gift__start {
            padding: 20px;
        }

        .ld-reason__gift__start__img-wrapper {
            width: 100%;
        }

        .ld-reason__gift__start__img-wrapper img {
            width: 100%;
        }
  		.ld-reason__gift__start__img-wrapper__desktop-img {
          display: none;
        }

        .ld-reason__gift__start__text {
            margin: 50px 0;
            text-align: center;
        }

        .ld-reason__gift__start__text__header,
        .ld-reason__gift__start__text__header__strong {
            font-weight: bold;
            line-height: 1.5;
            font-size: 30px;
            color: #fff;
        }

        .ld-reason__gift__start__text__header__strong {
            color: var(--ld-main-color);
        }

        .ld-reason__gift__start__text__desc {
            color: #fff;
            font-size: 15px;
            letter-spacing: 1px;
        }

        .ld-reason__gift__start__imgs {
            display: flex;
            gap: 5px;
            overflow: scroll;
        }

        .ld-reason__gift__start__imgs img {
            width: 60%;
        }

        .ld-reason__why {
            text-align: center;
/*           	padding-top: 75px; */
        }

        .ld-reason__why__line {
            height: 2px;
            width: 130px;
            background-color: var(--ld-main-color);
            margin: auto;
        }

        .ld-reason__why__header {
            margin-top: 20px;
            margin-bottom: 30px;
            font-weight: bold;
            font-size: 23PX;
            color: #fff;
        }

        .ld-reason__why__header__strong {
            color: var(--ld-main-color);
        }

        .ld-reason__why__videos {
            display: none;
        }

        .ld-reason__rgb {
            background: linear-gradient(90deg, #FF0000 0%, #FFDE00 46.35%, #0066FF 100%);
            height: 4px;
            margin-top: 50px;
        }

        .ld-bnpl__img-wrapper-mobile img {
            width: 100%;
        }

        .ld-bnpl__img-wrapper-desktop {
            display: none;
        }

        /* Slide show */

        .ld-reason__why__slide {
            display: none
        }

        .ld-reason__why__slide__text {
            padding: 20px;
        }

        .ld-reason__why__slide__text p {
            margin-top: 10px;
            font-size: 13px;
            opacity: 0.8;
        }

        /* The dots/bullets/indicators */
        .ld-reason__why__slide__control {
            cursor: pointer;
            height: 2px;
            width: 30px;
            margin: 0 2px;
            background-color: #bbb;
            display: inline-block;
            transition: background-color 0.6s ease;
        }

        .ld-reason__why__dot-active {
            background-color: #717171;
        }

        /* Fading animation */
        .ld-reason__why__fade {
            -webkit-animation-name: ld-reason__why__fade;
            -webkit-animation-duration: 1.5s;
            animation-name: ld-reason__why__fade;
            animation-duration: 1.5s;
        }

        @-webkit-keyframes ld-reason__why__fade {
            from {
                opacity: .4
            }

            to {
                opacity: 1
            }
        }

        @keyframes ld-reason__why__fade {
            from {
                opacity: .4
            }

            to {
                opacity: 1
            }
        }
  
  		.ld-giftcards-container {
            overflow: auto;
        }
        .ld-giftcards {
            display: flex;
            width: 1200px;
            margin: auto;
        }
        .ld-giftcard {
            width: 60%;
            position: relative;
            margin: 10px;
        }
        .ld-giftcard-text {
            position: absolute;
            top: 20%;
            left: 0;
            width: 100%;
            text-align: left;
            padding: 25px;
            font-size: 12px;
        }
        .ld-giftcard__title {
            color: rgba(255, 255, 255, 0.39);
            letter-spacing: 3px;
          	font-size: 11px;
        }
        .ld-giftcard__price {
            font-size: 30px;
            font-weight: bold;
        }
        .ld-giftcard__action {
            background: #4E4CF7;
            width: 100%;
            display: flex;
            margin-top: 42px;
            padding: 6px 13px;
            font-size: 15px;
            cursor: pointer;
        }
        .ld-giftcard__action a {
            width: 100%;
            text-align: center;
        }
        .ld-giftcard img {
            width: 100%;
        }
        
        .ld-giftcards-how {
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }
        .ld-giftcards-how__title {
            font-size: 25px;
            font-weight: bold;
            margin: 40px 30px;
          text-align: center;
        }
        .ld-giftcards-how__icon {
            text-align: left;
            display: flex;
            align-items: center;
            gap: 20px;
            margin: 20px;
        }
        .ld-giftcards-how__icon img {
            width: 40px;
        }

