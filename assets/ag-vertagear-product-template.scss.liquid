.main-content {
    padding-top: 0px !important;
}

@font-face {
    font-family: TeXGyreAdventor-Regular;
    src: url('{{ 'texgyreadventor-regular.otf' | asset_url }}');
}
@font-face {
    font-family: TeXGyreAdventor-Bold;
    src: url('{{ 'texgyreadventor-bold.otf' | asset_url }}');
}

@import url('https://fonts.googleapis.com/css?family=Lato:300i,400');
$viewport-px-size: 1920;
@function px-to-vw($elem-px-size) {
    @return (($elem-px-size / $viewport-px-size) * 100)+vw
}

$min-mobile-breakpoint: 414px;
$min-tablet-breakpoint: 768px;
$mobile-breakpoint: 768px;
$fhd-breakpoint: 1920px;
$wqhd-breakpoint: 2560px;

{% assign swatch-width = '75' %}
{% assign swatch-height = '75' %}
{% assign mobile-swatch-width = '72' %}
{% assign mobile-swatch-height = '72' %}

.ready-rgb-desktop {
  	display: none;
	@media screen and (min-width: $mobile-breakpoint) {
      display: block;
    }
}

.ready-rgb-mobile {
  	display: block;
	@media screen and (min-width: $mobile-breakpoint) {
      display: none;
    }
}

#ag-vg-product {
