                    -webkit-user-drag: none;
                    -khtml-user-drag: none;
                    -moz-user-drag: none;
                    -o-user-drag: none;
                    user-drag: none;
                }
               .product-image-slider-container {
                width: auto;
                height: auto;
                max-width: px-to-vw(602);
                //margin-top: px-to-vw(150);
                margin: auto;
                display: none;
                @media screen and (min-width: $mobile-breakpoint) {
                  display: block;
                }
                .slick-prev {
                  left: px-to-vw(-25) !important;
                  &:before {
                    font-family: "FontAwesome";
                    content: "\f104";
                    font-size: px-to-vw(45);
                    color: black;
                  }
                }
                .slick-next {
                  right: px-to-vw(-25) !important;
                  &:before {
                    font-family: "FontAwesome";
                    content: "\f105";
                    font-size: px-to-vw(45);
                    color: black;
                  }
                }
                .slick-next, .slick-prev {
                  height: px-to-vw(42);
                }
                .product-image-slide {
                  cursor: pointer;
                  border: px-to-vw(1) solid #2f2f2f;
                  margin-right: px-to-vw(5);
                  background-color: #FFFFFF;
                }
              }
            }
            
            #ag-vg-product-overview-product-description {
                flex: 1;
                text-align: justify;
                font-family: 'Lato', sans-serif;
                font-weight: 300;
                order: 3;
                border-top: 1px solid #b9b9b9;
                font-size: 20px;
                max-width: 400px;
                margin-top: 40px;
                padding: 25px 0;
                @media screen and (min-width: $mobile-breakpoint) {
                    border-top: none;
                    margin-top: 0;
                    padding: 0;
                    font-size: px-to-vw(20);
                  	max-width: px-to-vw(450);
                }
              	@media screen and (min-width: $fhd-breakpoint) {
                  max-width: px-to-vw(550);
                }
                @media screen and (min-width: $wqhd-breakpoint) {
                  max-width: px-to-vw(470);
                }
                p {
                    color: #2f2f2f;
                    margin: 0;
                    padding: 0;
                    @media screen and (min-width: $mobile-breakpoint) {
                        //text-align-last: right;
                    }
                }
            }
        }
    }
