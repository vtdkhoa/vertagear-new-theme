                  max-width: px-to-vw(470);
                }
                .ag-vg-product-quantity-selector {

                }
                .js-qty {
                    max-width: initial;
                    width: 160px;
                    margin-top: 10px;
                    margin-bottom: 40px;
                    @media screen and (min-width: $mobile-breakpoint) {
                        width: px-to-vw(160);
                        margin-top: px-to-vw(10);
                        margin-bottom: px-to-vw(40);
                    }
