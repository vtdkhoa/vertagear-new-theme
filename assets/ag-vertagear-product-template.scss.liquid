.swatch { 
    margin: px-to-vw(16) 0; 
    max-width: 350px;
  	width: 100%;
    @media screen and (min-width: $mobile-breakpoint) {
        width: px-to-vw(500);
      	max-width: initial;
    }
    &.header {
        margin: px-to-vw(8) 0;
    }
    input { 
        display:none !important;
    }
    label {
        -webkit-border-radius:2px;
        -moz-border-radius:2px;
        border-radius:2px;
        float:left;
        min-width:{{ mobile-swatch-width }}px !important; 
        height:{{ mobile-swatch-height }}px !important;
        @media screen and (min-width: $mobile-breakpoint) {
                min-width: px-to-vw({{ swatch-width }}) !important; 
                height: px-to-vw({{ swatch-height }}) !important;
        }
        margin:0;
        border: #474747 2px solid;
        background-color:#ddd;
        font-size:px-to-vw(13);
        text-align:center;
        line-height:{{ swatch-height }};
        white-space:nowrap;
        text-transform:uppercase;
    }
    .color {
        &.swatch-element {
            label {
                padding:0; 
            }
        }
    }
    .swatch-element {
        float:left;
        -webkit-transform:translateZ(0);
        -webkit-font-smoothing:antialiased;
        margin:0px px-to-vw(10) px-to-vw(10) 0;
        position:relative;
        label { 
            padding:0 10px; 
        }
        &.soldout {
            .crossed-out {
                display: block;
            }
            label {
                filter: alpha(opacity=60);
                -khtml-opacity: 0.6;
                -moz-opacity: 0.6;
                opacity: 0.6; 
            }
        }
        &:hover {
            .tooltip {
                filter:alpha(opacity=100);
                -khtml-opacity:1;
                -moz-opacity:1;
                opacity:1;
                visibility:visible;
                -webkit-transform:translateY(0px);
                -moz-transform:translateY(0px);
                -ms-transform:translateY(0px);
                -o-transform:translateY(0px);
                transform:translateY(0px);
            }
        }
    }
    .tooltip {
        text-align:center;
        background:gray;
        color:#fff;
        bottom:100%;
        padding: 10px;
        display:block;
        position:absolute;
        width:100px;
        left:{{ swatch-width | remove: 'px' | to_number | divided_by: 2 | minus: 50 | plus: 2 }}px;
        margin-bottom:15px;
        filter:alpha(opacity=0);
        -khtml-opacity: 0;
        -moz-opacity: 0;
        opacity:0;
        visibility:hidden;
        -webkit-transform: translateY(10px);
        -moz-transform: translateY(10px);
        -ms-transform: translateY(10px);
        -o-transform: translateY(10px);
        transform: translateY(10px);
        -webkit-transition: all .25s ease-out;
        -moz-transition: all .25s ease-out;
        -ms-transition: all .25s ease-out;
        -o-transition: all .25s ease-out;
        transition: all .25s ease-out;
        -webkit-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
        -moz-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
        -ms-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
        -o-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
        z-index: 10000;
        -moz-box-sizing:border-box; 
        -webkit-box-sizing:border-box; 
        box-sizing:border-box;
        &:before {
            bottom:-20px;
            content:" ";
            display:block;
            height:20px;
            left:0;
            position:absolute;
            width:100%;
        }
        &:after {
            border-left:solid transparent 10px;
            border-right:solid transparent 10px;
            border-top:solid gray 10px;
            bottom:-10px;
            content:" ";
            height:0;
            left:50%;
            margin-left:-13px;
            position:absolute;
            width:0;
        }
    }
    &.error {
        background-color:#E8D2D2!important;
        color:#333!important;
        padding:1em;
        border-radius:5px;
        p {
            margin:0.7em 0;
            &:first-child {
                margin-top:0;
            }
            &:last-child {
                margin-bottom:0;
            }
        }
        code {
            font-family:monospace;
        }
    }
}