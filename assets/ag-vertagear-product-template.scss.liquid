                        background-color: #FFFFFF;
                        height: 35px;
                        width: 160px;
                        border: 2px solid #2f2f2f;
                        @media screen and (min-width: $mobile-breakpoint) {
                            height: px-to-vw(35);
                            width: px-to-vw(160);
                            border: px-to-vw(2) solid #2f2f2f;
                        }
                    }
                    .js-qty__adjust--minus {
                        width: 30px;
                        height: 31px;
                        background-color: #e3e3e3;
                        top: 2px;
                        left: 2px;
                        opacity: initial;
                        position: absolute;
                        @media screen and (min-width: $mobile-breakpoint) {
                            width: px-to-vw(30);
                            height: px-to-vw(30);
                            top: px-to-vw(2);
                            left: px-to-vw(2);
                        }
                    }
                    .js-qty__adjust--plus {
                        width: 30px;
                        height: 31px;
                        background-color: #e3e3e3;
                        top: 2px;
                        right: 2px;
                        opacity: initial;
                        position: absolute;
                        @media screen and (min-width: $mobile-breakpoint) {
                            width: px-to-vw(30);
                            height: px-to-vw(30);
                            top: px-to-vw(2);
                            right: px-to-vw(2);
                        }
                    }
                }
