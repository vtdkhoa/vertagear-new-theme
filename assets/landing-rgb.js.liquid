// Scroll to play video
window.addEventListener("load", ldRgbVideoScroll);
window.addEventListener("scroll", ldRgbVideoScroll);

function ldRgbVideoScroll() {
  const windowHeight = window.innerHeight;
  const videoEl = document.getElementById("ldRgbLightUpLogo");

  const videoHeight = videoEl.clientHeight;
  const videoClientRect = videoEl.getBoundingClientRect().top;

  if (
    videoClientRect <= windowHeight - videoHeight * 0.5 &&
    videoClientRect >= 0 - videoHeight * 0.5
  ) {
    videoEl.play();
  } else {
    videoEl.pause();
  }
}

// Faq
const ldRgbQuestions = document.getElementsByClassName("faq__each");
const ldRgbArrowBtns = document.getElementsByClassName("faq__arrow");
const ldRgbAnswers = document.getElementsByClassName("faq__answer");

for (let i = 0; i < ldRgbArrowBtns.length; i++) {
  const questionE = ldRgbQuestions[i];
  const arrowE = ldRgbArrowBtns[i];
  let isDisplay = false;
  questionE.addEventListener("click", () => {
    const answerE = ldRgbAnswers[i];
    if (isDisplay) {
      answerE.style.display = "none";
      isDisplay = false;
      arrowE.style.transform = "rotate(0)";
    } else {
      answerE.style.display = "block";
      isDisplay = true;
      arrowE.style.transform = "rotate(90deg)";
    }
  });
}

