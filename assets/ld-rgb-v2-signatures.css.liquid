.rgb__signature {
  width: 100%;
/*   height: 100vh;
  overflow-y: auto;
  scroll-snap-type: y mandatory; */
}
.rgb__signature::-webkit-scrollbar {
  display: none;
}

.rgb__signature .section {
  width: 100%;
/*   height: 100vh;
  overflow: hidden; */
  clip: rect(0, auto, auto, 0);

/*   scroll-snap-align: start; */
}
.rgb__signature .section .fixed {
  height: 100%;
}

.rgb__signature__container {
  height: 100%;
  position: relative;
  flex-direction: column;
  justify-content: flex-end;
  background-color: var(--background-color);
    display: flex;
}

.rgb__signature__img {
  width: 100%;
}

.rgb__signature__text {
  padding: 60px 20px 25px 20px;
}
.rgb__signature__text .header {
  font-weight: 700;
  font-size: 11px;
  line-height: 150%;
}
.rgb__signature__text .title {
  font-weight: 700;
  font-size: 18px;
  line-height: 150%;
  margin-top: 4px;
}
.rgb__signature__text .desc {
  font-weight: 400;
  font-size: 12px;
  line-height: 150%;
  margin-top: 10px;
}
.rgb__signature__text .learn-more {
  font-weight: 600;
  font-size: 16px;
  line-height: 24px;
  color: #4dabe9;
  margin-top: 10px;
}

@media screen and (min-width: 768px) {
  .rgb__signature__container {
  	display: block;
  }
  
  .rgb__signature__text {
    width: 100vw;
    background-position: center; /* Center the image */
    background-repeat: no-repeat; /* Do not repeat the image */
    background-size: cover; /* Resize the background image to cover the entire container */
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0;
  }
  .rgb__signature__text.n1 {
    background-image: url("{{ 'ld-rgb2-signature-desk-1.jpeg' | asset_url }}");
  }
  .rgb__signature__text.n2 {
    background-image: url("{{ 'ld-rgb2-signature-desk-2.jpeg' | asset_url }}");
  }
  .rgb__signature__text.n3 {
    background-image: url("{{ 'ld-rgb2-signature-desk-3.jpeg' | asset_url }}");
  }

  .text__wrapper {
    max-width: 620px;
    margin-left: 100px;
  }
  .rgb__signature__text .header {
    font-weight: 700;
    font-size: 16px;
    line-height: 150%;
  }
  .rgb__signature__text .title {
    font-weight: 700;
    font-size: 40px;
    line-height: 130%;
    margin-top: 10px;
  }
  .rgb__signature__text .desc {
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
    margin-top: 30px;
  }
  .rgb__signature__text .learn-more {
    font-weight: 600;
    font-size: 16px;
    line-height: 24px;
    color: #fff;
    margin-top: 30px;
    padding: 14px 20px;
    background-color: var(--main-color);
    width: fit-content;
  }
}
