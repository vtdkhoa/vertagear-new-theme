}

$orange-cta-button-color: #C36900;
$light-orange-cta-button-color: #DBA566;
@mixin cta-button-style() {
  padding: 10px;
  background-color: $orange-cta-button-color;
  font-weight: 600;
  color: #fff;
  text-transform: uppercase;
  &:hover {
    text-decoration: none;
