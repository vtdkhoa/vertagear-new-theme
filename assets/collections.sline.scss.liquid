.vertagear-tutorial-block {
    display: block;
    width: 100%;
    height: auto;
    min-height: 405px;	
  	background-image: url("{{ 'S-Line_Mobile.png' | asset_url }}"); 
    background-repeat: no-repeat;    
  	background-position: center;
    background-color:#000;
    background-size: cover;
    
    @media screen and (min-width: $mobile-breakpoint) {
        background-image: url("{{ 'S-Line-Video-Poster.jpg' | asset_url }}"); 
        min-height: unset;
        height: 577px;
        margin-top: 10px;
    }

    ul {
        margin: 0 auto;
        max-width: 1024px;
        list-style-type: none;
        overflow: hidden;
        height: auto;
        padding-top: 20px;

        li {
            .video-wrapper {
                margin: 0 auto;
                text-align: center;
            }

            video {
                width: 100%;
                height: 153px;
                max-width: 270px;
                background-color: #9b9b9b;
            }

            span {
                margin-top: 46px;
                text-align: center;
                display: block;
                margin-bottom: 17px;
            }

            text-align: center;
            color: white;
            display: block;
            width: 100%;
            min-width:270px;
            font-family: Lato;
            font-size: 16px;
            font-weight: normal;
            font-style: normal;
            font-stretch: normal;
            line-height: 1.5;
            letter-spacing: normal;
            color: #ffffff;

            @media screen and (min-width:$mobile-breakpoint) {
                width: 33%;
                display: block;
                height: 350px;
	            margin: 0 auto;
            }
        }
    }
}

