}

.collection-feature-block {
    h2 {
        font-size: 20px;
        font-weight: normal;
        font-style: normal;
        font-stretch: normal;
        font-weight: bold;
        line-height: normal;
        letter-spacing: normal;
        margin-top: 58px;
        width: 100%;

        @media screen and (min-width: $mobile-breakpoint) {
            margin-top: 144px;
        }
    }

    &.one,
    &.three {
        background-color: #f8f8f8;
    }

    &.one {
      background-image: url("{{ 'NEW-SLine-Design-and-Comfort-mobile.jpg' | asset_url }}");
      background-size: cover;
      background-repeat: no-repeat;
      @media screen and (min-width: $dekstop-breakpoint) {
        background-image: url("{{ 'NEW-SLine-Design-and-Comfort.jpg' | asset_url }}");
       	background-size: 100%;
      }
        
        h2 {
            @media screen and (min-width: $mobile-breakpoint) {
                margin-top: 173px;
            }
        }

        .feature-copy {
            width: 282px;

            @media screen and (min-width: $mobile-breakpoint) {
				width: 100%;
                max-width: 435px;
            }

            font-family: Lato;
            font-size: 16px;
            font-weight: normal;
            font-style: normal;
            font-stretch: normal;
            line-height: 1.5;
            letter-spacing: normal;
            color: #000000;
        }
    }

    &.two {
      @media screen and (max-width: $mobile-breakpoint) {
      	margin-top: 10px;
        background-color: #f8f8f8;
        height: 600px;
        width: 100%;
      }
      background-image: url("{{ 'NEW-Assembly-Master-mobile.png' | asset_url }}");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center bottom;
      background-color:#f8f8f8;
        @media screen and (min-width: $mobile-breakpoint) {
          background-image: url("{{ 'NEW-Assembly-Master.jpg' | asset_url }}");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center bottom;
          }
          
      
        h2 {
            @media screen and (min-width:$mobile-breakpoint) {
                margin-top: 185px;
            }
        }
        .grid-container {
          @media screen and (max-width:$mobile-breakpoint) {
            height: 100%; 
            /*background-color: rgba(0,0,0,0.75);
            color: white;*/
            color: black;
          
            
            &.text{
              background-color: rgba(255, 255, 255, 0.55);
              padding: 25px 0;
            }
            .text2{
              max-width: 350px;
              text-align: left;
              margin: 0 auto;
            }
           }
        }

        .copy-container {
            text-align: left;
            width: 100%;

            @media screen and (min-width:$mobile-breakpoint) {
                float: right;
                width: 435px;
                margin-top: 0;
                margin-right: 102px;
            }
        }
    }

    &.three {
      @media screen and (max-width: $mobile-breakpoint) {
        margin-top: 10px;
        background-color: #dadcd1;
    	height: 750px;
        width: 100%;
     	background-size: contain;
      }
     /* background-image: url("{{ 'vertagear-sline-mobile-uphrf-banner.jpg' | asset_url }}");*/
      background-image: url("{{ 'NEW-Home-foam-mobile.jpg' | asset_url }}");
      
      @media screen and (min-width: $mobile-breakpoint) {
        background-image: url("{{ 'vertagear-sline-uphrf-banner.jpg' | asset_url }}");
       }
        background-size: cover;
        background-position: bottom center;
        background-repeat: no-repeat;

        h2 {
            margin-top: 58px;

            @media screen and (min-width:$mobile-breakpoint) {
                margin-top: 185px;
            }
        }

        
        .feature-copy {
            width: 100%;

            @media screen and (min-width:$mobile-breakpoint) {
                width: 435px;
            }
        }
    }

    &.four {
        background-color: white;
        background-image: url("{{ 'NEW-S-Line-cobrands-mobile.jpg' | asset_url }}");
        
        background-size: cover;
      @media screen and (min-width: $mobile-breakpoint) {
        background-image: url("{{ 'NEW-S-Line-cobrands.jpg' | asset_url }}");
       }
        background-position: center center;
        background-repeat: no-repeat;
        color: black;
        padding-left: 0;

        @media screen and (min-width:$mobile-breakpoint) {
            text-align: center;
        }

        h2 {
            @media screen and (min-width:$mobile-breakpoint) {
                margin-top: 38px;
            }
        }

        .feature-copy {
            @media screen and (min-width:$mobile-breakpoint) {
                width: 435px;
            }

            margin: 0 auto;
        }
    }
}

