.other-product-lines h2 {
    font-weight: bold;
    width: auto;
}

.other-product-lines {
    margin: 0;
    margin-top: -10px;
    list-style-type: none;
    width: 100%;
    height: auto;

    @media screen and (max-width: $mobile-breakpoint) {
        background-color: white;
    }

    >li {

        color: white;
        width: 100%;
        padding-top: 106px;
        height: 340px;
        margin-top: 10px;
        text-align: center;

      &:nth-child(1) {
          background-image: url("{{ 'vertagear-pline-shop-now-banner.jpg' | asset_url }}");
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center center;
        }
        &:nth-child(2) {
          background-image: url("{{ 'vertagear-triigger-shop-now-banner.jpg' | asset_url }}");
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center center;
        }
        &:nth-child(3) {
          background-image: url("{{ 'vertagear-accessories-shop-now-banner.jpg' | asset_url }}");
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center center;
        } 
        @media screen and (min-width: $mobile-breakpoint) {
            width: 33%;
            padding-top: 95px;
            float: left;
            display: block;
            height: 318px;
            border-right: 10px solid;

            &:last-child {
                border-right: none;
            }
        }

        h3 {
            text-transform: uppercase;
            height: 15px;
            font-family: Lato;
            font-size: 12px;
            font-weight: 600;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: 2px;
            text-align: center;
            color: white;
        }

        h2 {
            margin: 14px auto 0;
            height: 27px;
            font-family: Lato;
            font-size: 22px;
            font-weight: bold;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: 0.5px;
            text-align: center;
        }

        .vertagear-jump-list-container {
            margin-top: 30px;

            ul {
                list-style-type: none;
                margin-left: 0;
            }

            li {
                display: block;
                height: 40px;

                .vertagear-button {
                    margin: 0 auto;
                    display: inline-block;
                    cursor: pointer;
                    display: block;
                    width: 150px;
                    height: 40px;
                    line-height: 36px;
                    vertical-align: middle;
                    border: solid 1px #ffffff;
                    color: white;
                    text-decoration: none;
                    text-align: center;
                    font-family: Lato;
                    font-size: 16px;
                    font-weight: 500;
                    font-style: normal;
                    font-stretch: normal;
                    letter-spacing: normal;
                    color: #ffffff;
                }
            }
        }
    }
}


