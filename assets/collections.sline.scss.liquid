$mobile-breakpoint: 768px;
$dekstop-breakpoint: 1024px;
$fhd-breakpoint: 1680px;

.collection-header{
  	height: 200px;
    width: 100%;
  	background-image: url("{{ 'NEW3-sline-header.jpg' | asset_url }}"); 
    background-repeat: no-repeat;    
  	background-position: center;
    background-color:#000;
    background-size: cover;
    @media screen and (min-width: $mobile-breakpoint) {
      height: 563px;
    }
    @media screen and (min-width: $fhd-breakpoint) {
      height: 863px;
    }
  
    display: block;
    overflow: hidden;
}
.collection-intro{
  background-color:#000;
  color:#FFF;
  padding:20px;
  .text {
    max-width:900px !important;
    margin:0 auto;
  }
}
.sline-hero {
    height: 600px;
    width: 100%;
  	background-image: url("{{ 'vertagear-sline-mobile-hero-banner.jpg' | asset_url }}"); 
    background-size: contain;
    background-repeat: no-repeat;    
  	background-position: center 320px;
    background-color:#000;
    @media screen and (min-width: $mobile-breakpoint) {
      height: 759px;
      background-image: url("{{ 'vertagear-sline-hero-banner.jpg' | asset_url }}");
      background-size: cover;
  	  background-position: center center;
     }
  
    display: block;
    overflow: hidden;
}

