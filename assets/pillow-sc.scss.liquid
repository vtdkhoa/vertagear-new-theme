@import url('https://fonts.googleapis.com/css?family=Open+Sans');
@mixin content-container($alignment) {
    .container {
        font-family: 'Open Sans', sans-serif;
        margin: auto;
        max-width: 1600px;
        padding: 30px 0px;
        @media screen and (min-width: 768px) {
            padding: 90px 0px;
        }
        text-align: $alignment;
        position: relative;
        h1 {
            font-weight: 800;
            font-size: 28px;
            @media screen and (min-width: 768px) {
                font-size: 50px;
            }
        }
        h2 {
            font-weight: bold;
            font-size: 30px;
        }
        h3 {
            font-size: 17px;
        }
    }
}
body#pillow-sc .wrapper.main-content {
    max-width: 100%;
    padding: 0;
    .no-drag {
        user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-drag: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }
    .main_button {
        border-radius: 100px;
        width: 225px;
        background-color: #f30303;
        color: white;
        font-size: 15px;
        font-weight: 600;
        position: relative;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin: 25px auto;
        &:hover {
            cursor: default;
        }
        .button_text {
            z-index: 2;
            display: block;
            padding: 10px 20px;
            text-align: center;
            position: relative;
            &:hover {
                cursor: pointer;
            }
        }
        a {
            color: #FFF !important;
            &:hover {
                text-decoration: none;
            }
        }
    }
    .hero {
        width: 100%;
        color: white;
        background: url({{ 'pillow_final_hero.png' | asset_url }}) no-repeat;
        background-size: cover;
        background-position: 30%;
        @media screen and (min-width: 1024px) {
            height: 700px;
        }
        @include content-container(right);
        .hero_info {
            text-align: center;
            padding: 15px;
            @media screen and (min-width: 768px) {
                padding: 0;
                width: 450px;
                text-align: left;
                float: right;
                .main_button {
                    margin: 0;
                    margin-top: 40px;
                }
            }
            @media screen and (min-width: 1024px) {
                margin-top: -10px;
            }
            @media screen and (min-width: 1275px) {
                margin-top: -20px
            }
            @media screen and (min-width: 1275px) {
                margin-top: -30px;
            }
            @media screen and (min-width: 1700px) {
                margin-top: -40px;
            }
            @media screen and (min-width: 1900px) {
                margin-top: -50px;
            }
            h1 {
                @media screen and (min-width: 1024px) {
                    margin-bottom: 110px;
                }
            }
        }
        p {
            font-size: 15px;
            font-weight: 600;
        }
    }
    .silver_lining {
        width: 100%;
        @media screen and (min-width: 768px) {
            height: 536px;
        }
        @include content-container(center);
        .silver_lining_info {
            padding: 20px;
            img {
                margin-bottom: 20px;
                margin-top: 20px;
            }
            @media screen and (min-width: 768px) {
                width: 750px;
                margin: auto;
                padding: 0;
                img {
                    float: left;
                }
                p {
                    float: right;
                    text-align: left;
                    width: 400px;
                    margin-top: 20px;
                }
            }
            @media screen and (min-width: 1024px) {
                width: 770px;
                margin: auto;
            }
        }
    }
    .coffee {
        width: 100%;
        color: white;
        background: url({{ 'coffee-hero.png' | asset_url }}) no-repeat;
        background-size: cover;
        padding: 20px;
        @media screen and (min-width: 768px) {
            height: 586px;
            padding: 0;
        }
        @include content-container(center);
        .coffee_fiber_info {
            img {
                margin-top: 40px;
                margin-bottom: 40px;
                margin-left: 10px;
            }
            @media screen and (min-width: 768px) {
                width: 750px;
                margin: auto;
                img {
                    float: right;
                    margin-top: 40px;
                    margin-bottom: 0;
                    margin-left: 0;
                }
                p {
                    float: left;
                    margin-top: 40px;
                    width: 400px;
                    text-align: left;
                }
            }
            @media screen and (min-width: 1024px) {
                width: 850px;
            }
        }
    }
    .odor_control {
        width: 100%;
        img {
            margin-top: 20px;
            margin-bottom: 40px;
        }
        @media screen and (min-width: 768px) {
            height: 498px;
        }
        @include content-container(center);
        .odor_control_info {
            padding: 20px;
            @media screen and (min-width: 768px) {
                padding: 0;
                width: 750px;
                margin: auto;
                img {
                    float: left;
                    margin-top: -40px;
                    margin-left: -20px;
                    margin-right: 50px;
                }
                p {
                    text-align: left;
                }
            }
            @media screen and (min-width: 1024px) {
                width: 850px;
            }
        }
    }
    .quick_drying {
        width: 100%;
        color: white;
        background: url({{ 'drying-background.png' | asset_url }}) no-repeat;
        background-size: cover;
        @media screen and (min-width: 768px) {
            height: 557px;
        }
        @include content-container(center);
        .quick_drying_info {
            padding: 20px;
            img {
                margin-top: 10px;
                margin-bottom: 40px;
            }
            @media screen and (min-width: 768px) {
                width: 750px;
                margin: auto;
                padding: 0;
                img {
                    float: right;
                    margin-top: 0;
                    margin-bottom: 0;
                }
                p {
                    float: left;
                    margin-top: 60px;
                    text-align: left;
                    width: 330px;
                }
            }
            @media screen and (min-width: 1024px) {
                width: 850px;
                p {
                    width: 400px;
                }
            }
        }
    }
    .friendly_to_env {
        width: 100%;
        font-size: 15px;
        @media screen and (min-width: 768px) {
            height: 540px;
        }
        @include content-container(center);
        .environmental_info {
            margin: auto;
            padding: 20px;
            @media screen and (min-width: 768px) {
                width: 750px;
                padding: 0;
            }
            @media screen and (min-width: 1024px) {
                width: 850px;
            }
        }
    }
    .preorder {
        font-weight: 600;
        width: 100%;
        color: white;
        background: url({{ 'preorder-background.png' | asset_url }}) no-repeat;
        background-size: cover;
        background-position: 35%;
        font-size: 19px;
        @media screen and (min-width: 768px) {
            height: 312px;
        }
        @include content-container(center);
        .preorder_info {
            margin: auto;
            padding: 0 40px;
            height: 100%;
            margin-top: 35px;
            margin-bottom: 35px;
            @media screen and (min-width: 768px) {
                width: 750px;
                padding: 0;
                margin-top: 0;
                margin-bottom: 0;
            }
            @media screen and (min-width: 1024px) {
                width: 850px;
            }
            .main_button {
                margin-top: 60px;
            }
        }
    }
}