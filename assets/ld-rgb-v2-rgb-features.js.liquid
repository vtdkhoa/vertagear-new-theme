var namRgbExploreFeatureBtns = document.getElementsByClassName(
  "nam-feature__action__switch__btn"
);
var namRgbExploreFeatureImg = document.getElementById("namFeatureImg");
var namRgbExploreFeatureTitle = document.getElementById("namFeatureTitle");
var namRgbExploreFeatureDesc = document.getElementById("namFeatureDesc");
var ldRgbExploreBtn = document.getElementById("ldRgbExploreBtn");

var namRgbExploreFeatureRemoveBtnMainColor = () => {
  for (let i = 0; i < namRgbExploreFeatureBtns.length; i++) {
    var btn = namRgbExploreFeatureBtns[i];
    btn.classList.remove("nam-product-main-btn");
    btn.classList.add("nam-product-sec-btn");
  }
};
for (let i = 0; i < namRgbExploreFeatureBtns.length; i++) {
  var btn = namRgbExploreFeatureBtns[i];
  var featureData = namRgbExploreFeatureData[i];
  btn.onclick = () => {
    namRgbExploreFeatureImg.src = featureData.imgName.mobile;
    namRgbExploreFeatureTitle.innerHTML = featureData.title;
    namRgbExploreFeatureDesc.innerHTML = featureData.description;
    namRgbExploreFeatureRemoveBtnMainColor();
    btn.classList.remove("nam-product-sec-btn");
    btn.classList.add("nam-product-main-btn");
    ldRgbExploreBtn.href = featureData.exploreHref;
  };
}

