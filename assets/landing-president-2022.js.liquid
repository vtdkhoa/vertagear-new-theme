const ldPlayPlauseVideo = (video) => {
  if (video.paused) {
    video.play(); 
    const ldVideoControlsAtt =  document.createAttribute("controls");
  	video.setAttributeNode(ldVideoControlsAtt);
  }
  else 
    video.pause(); 
}

const ldVideo1 = document.getElementById("ldVideo1");
const ldVideoPlayBtn1 = document.getElementById("ldVideoPlayBtn1");
ldVideoPlayBtn1.onclick = () => {
	ldPlayPlauseVideo(ldVideo1);
  	ldVideoPlayBtn1.style.display = "none";
}

