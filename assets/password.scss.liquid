/* Core Styles */

body{
	font-family: $bodyFontStack;
	color: {{ settings.color_body_text }};
	background: {{ settings.color_body_bg_secondary }};
	padding: 0;
	margin: 0;
}

h1, h2, h3, h4, h5, h6, .custom-font{
	font-family: $headerFontStack;
	color: {{ settings.color_body_text }};	
}

a{
	color: {{ settings.color_primary }};
}

/* Main Styles */

#site-title{
	margin: 0;
	padding: 0;
}

.password--logo img{
	max-height: 300px;
	max-width: 300px;
}

.welcome-message h1{
	margin-top: 0;
}

#site-title a{
	text-decoration: none;
}

.password--wrapper{
	width: 60%;
	margin: 2% 20% 0 20%;
}

.password--logo{
	margin-bottom: 20px;
}

#password-show{
	font-size: 13px;
}

/* Password Section */

.password-wrapper{
	padding: 30px 0;
	text-align: center;
	background: {{ settings.color_body_bg }};
	font-size: 13.3px;
	
	background-color: rgba(0, 0, 0, 0.9);
    height: 100%;
    left: 0;
    overflow: hidden;
    position: absolute;
    top: 0;
    width: 100%;
}

.password--main{
    background: white none repeat scroll 0 0;
    color: black;
    left: 50%;
    padding: 30px;
    position: absolute;
    text-align: center;
    top: 50%;
    transform: translate(-50%, -50%);
}

.password--input{
	padding: 10px;
}

.password--store-owner{
	font-size: 12px;
	margin: 30px 0 0;
}

.btn-default{
	padding: 10px;
	color: {{ settings.color_body_bg_secondary }};
	background: {{ settings.color_body_text }};
	border: none;
}

.input-group{
	margin-top: 20px;
}

.password--close{
	position: absolute;
	right: 10px;
	top: 10px;
}

.password--close img{
	width: 30px;
}

/* Top Slider */

#site-header{
	background: #fff none repeat scroll 0 0;
    position: absolute;
    text-align: center;
    top: 0;
    width: 100%;
    z-index: 1000;
	border-bottom: 1px solid #e5e5e5;    
}

#site-header div.site-header--inner{
	padding: 40px;
}

/* Footer */

#footer {
	width: 100%;
	text-align: center;
	font-size: 13.3px;
	clear: both;
	padding-top: 15px;
}

#powered a {
	background-repeat: no-repeat;
	background-image: url(data:image/png;base64,);
	padding-left: 21px;
	text-decoration: none;
	color: {{ settings.color_body_text }};
}

#powered a:hover {
	text-decoration: underline;
}

/* Errors */

.errors {
	background: #feebeb;
	padding: 4px 5px;
	font-size: 15px;
	color: #7e1412;
	display: inline-block;
	margin-bottom: 25px;
}

.errors ul {
	list-style: none;
	padding: 0;
	margin: 0;
}

/* Mobile/Tablet */

@media only screen and (max-width: 768px) {
    
    .password--wrapper{
		margin: 0;
		width: 100%;
	}
    
    .password--main {
        float: none;
        margin: 0;
        padding: 50px;
        text-align: center;
        position: relative;
        top: auto;
        bottom: auto;
        left: auto;
        right: auto;
        transform: none;
    }
    
}    