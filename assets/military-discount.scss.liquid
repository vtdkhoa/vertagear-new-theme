@import url('https://fonts.googleapis.com/css?family=Montserrat:400,600,800');
@import url('https://fonts.googleapis.com/css?family=Open+Sans');
@mixin content-container-military($alignment, $padding) {
  .container {
    font-family: 'Open Sans', sans-serif;
    font-size: 17px;
    margin: auto;
    max-width: 1600px;
    padding: 30px 0px;
    @media screen and (min-width: 768px) {
      padding: $padding 0px;
    }
    text-align: $alignment;
    position: relative;
  }
}
body#vertagear-military-and-veterans-discount-on-gaming-chairs .wrapper.main-content {
  max-width: 100%;
  padding: 0;
  .no-drag {
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  }
  .hero {
    width: 100%;
    font-family: 'Montserrat', sans-serif;
    position: relative;
    color: white;
    //@include content-container-military(right, 0px);
    .desktop {
      position: relative;
      width: 100%;
      height: auto;
      display: none;
      @media screen and (min-width: 768px) {
        display: block;
      }
    }
    .mobile {
      position: relative;
      width: 100%;
      height: auto;
      @media screen and (min-width: 414px) {
        display: block;
      }
      @media screen and (min-width: 768px) {
        display: none;
      }
    }
    .military-heading {
      	font-family: 'Montserrat', sans-serif;
      	position: absolute;
      	width: 250px;
      	font-weight: 800;
      	text-align: center;
      	top: 19%;
      	left: 0;
      	right: 0;
      	margin: 0 auto;
      	line-height: 50px;
      	@media screen and (min-width: 768px) {
            top: 20%;
            left: 20%;
            font-size: 2.95vw;
          	text-align: left;
          	width: 175px;
          	right: auto;
          	margin: none;
          	line-height: initial;
            @media screen and (min-width: 1500px) {
                line-height: 60px;
            }
       	}
    }
    .discount-notice {
      	font-family: 'Montserrat', sans-serif;
		position: absolute;
      	font-size: 4.50vw;
      	bottom: 2%;
      	left: 25%;
      	@media screen and (min-width: 768px) {
          bottom: 14%;
          left: 25%;
          font-size: 1.40vw;
        }
    }
  }
  .community {
    font-family: 'Montserrat', sans-serif;
    height: auto;
    padding: 60px 20px;
    @media screen and (min-width: 768px) {
      height: 320px;
      width: 80%;
      @media screen and (min-width: 1097px) {
        height: 340px;
      }
      @media screen and (min-width: 1161px) {
        height: 360px;
      }
      @media screen and (min-width: 1226px) {
        height: 380px;
      }
      @media screen and (min-width: 1290px) {
        height: 400px;
      }
      @media screen and (min-width: 1355px) {
        height: 420px;
      }
      @media screen and (min-width: 1419px) {
        height: 440px;
      }
      @media screen and (min-width: 1483px) {
        height: 460px;
      }
      @media screen and (min-width: 1548px) {
        height: 480px;
      }
      @media screen and (min-width: 1612px) {
        height: 500px;
      }
      @media screen and (min-width: 1677px) {
        height: 520px;
      }
      @media screen and (min-width: 1741px) {
        height: 540px;
      }
      @media screen and (min-width: 1806px) {
        height: 560px;
      }
      @media screen and (min-width: 1806px) {
        height: 580px;
      }
    }
    color: black;
    position: relative;
    margin: auto;
    .laptops {
      margin-bottom: 20px;
      @media screen and (min-width: 768px) {
        position: absolute;
        z-index: 1;
        width: 80%;
      }
    }
    .gaming {
      @media screen and (min-width: 768px) {
        position: absolute;
        z-index: 2;
        left: 65%;
        top: 130px;
      }
      h2 {
        text-align: center;
        margin: auto;
        width: 290px;
        margin-bottom: 20px;
        @media screen and (min-width: 768px) {
          width: 170px;
          text-align: left;
          margin: 0;
          @media screen and (min-width: 1097px) {
            width: 180px;
          }
          @media screen and (min-width: 1161px) {
            width: 190px;
          }
          @media screen and (min-width: 1226px) {
            width: 200px;
          }
          @media screen and (min-width: 1290px) {
            width: 210px;
          }
          @media screen and (min-width: 1355px) {
            width: 220px;
          }
          @media screen and (min-width: 1419px) {
            width: 230px;
          }
          @media screen and (min-width: 1483px) {
            width: 240px;
          }
          @media screen and (min-width: 1548px) {
            width: 250px;
          }
          @media screen and (min-width: 1612px) {
            width: 260px;
          }
          @media screen and (min-width: 1677px) {
            width: 270px;
          }
          @media screen and (min-width: 1741px) {
            width: 280px;
          }
          @media screen and (min-width: 1806px) {
            width: 290px;
          }
          @media screen and (min-width: 1806px) {
            width: 300px;
          }
        	font-size: 1.55vw;
        }
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
      }
      p {
        font-family: 'Open Sans', sans-serif;
        text-align: center;
        @media screen and (min-width: 768px) {
          text-align: left;
          width: 340px;
          font-size: 13px;
        }
      }
    }
  }
  .military-form {
    width: 100%;
    height: auto;
    position: relative;
    @media screen and (min-width: 768px) {
      width: 100%;
      height: auto;
    }
    .desktop {
      position: absolute;
      top:0;
      left:0;
      height:100%;
      width: 100%;
      display: none;
      object-fit: cover;
      object-position:50%;
      @media screen and (min-width: 768px) {
        display: block;
      }
    }
    .mobile {
      position: absolute;
      top:0;
      left:0;
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      @media screen and (min-width: 768px) {
        display: none;
      }
    }
    .content {
      color: white;
      width: 100%;
      position: relative;
      z-index: 2;
      padding:70px 20px;
/*       top: 6%; */
      text-align: left;
      @media screen and (min-width: 768px) {
/*         top: 15%; */
/*         left: 18%; */
        width: 38vw;
        margin-left:10%;
        text-align: left;
      }
      h2 {
        font-family: 'Montserrat', sans-serif;
        font-size: 30px;
        @media screen and (min-width: 768px) {
        	font-size: 1.60vw;
        }
        font-weight: 600;
      }
      p {
        font-family: 'Open Sans', sans-serif;
        font-size: 15px;
        padding: 0px 0px;
        @media screen and (min-width: 768px) {
        	font-size: .90vw;
          	padding: 0;
        }
      }
      .form {
        width: 100%;
        padding: 0px 0px;
        @media screen and (min-width: 768px) {
/*         	width: 25vw; */
          	padding: 0;
        }
        .error_message {
          width: 90%;
          text-align: left;
          font-size: 13px;
          color: #ff6e6e;
          margin-top: 0px;
        }
        input {
          width: 100%;
          font-size: 13px;
          @media screen and (min-width: 768px) {
          	width: 25vw;
            padding: .50vw 15px;
            font-size: .90vw;
          }
          border-radius: 5px;
          margin-bottom: 5px;
          background-color: white;
          border: 1px solid white;
          font-family: 'Montserrat', sans-serif;
        }
        .input {
          width: 100%;
          font-size: 13px;
          padding: 8px 10px;
          @media screen and (min-width: 768px) {
          	width: 25vw;
            padding: .50vw 15px;
            font-size: .90vw;
          }
          border-radius: 5px;
          margin-bottom: 5px;
          background-color: white;
          border: 1px solid white;
          font-family: 'Montserrat', sans-serif;
          position: relative;
          color: #707070;
          text-align: left;
          label {
            background-color: #F3F3F3;
            position: absolute;
            right: 10px;
            top: 5px;
            padding: 3px 15px;
            @media screen and (min-width: 768px) {
            	padding: .25vw 15px;
            }
            border-radius: 3px;
          }
        }
        .submit {
          font-family: 'Montserrat', sans-serif;
          font-size: 17px;
          padding: 5px 10px;
          @media screen and (min-width: 768px) {
            font-size: .90vw;
            padding: .50vw 30px;
            width: auto;
          }
          background-color: #DF3435;
          color: white;
          border-radius: 5px;
          font-weight: 600;
          border: none;
          margin-bottom: auto;
        }
    }
    }
  }
  .slogan {
    position: relative;
    background-color: #F7F7F7; 
    color: black;
    padding: 80px 20px 20px;
    text-align: center;
    h2 {
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      font-size: 27px;
      @media screen and (min-width: 768px) {
        font-size: 1.87vw;
      }
    }
    p {
      margin: auto;
      font-family: 'Open Sans', sans-serif;
      font-size: 15px;
      @media screen and (min-width: 768px) {
      	font-size: 13px;
        width: 740px;
      }
      margin-bottom: 70px;
    }
    .chair {
      position: relative;
      display: inline-block;
      width: 300px;
      height: 470px;
      padding-top: 10px;
      vertical-align:top;
      &:hover {
      	background: white;
        -webkit-box-shadow: 0px 0px 25px 0px rgba(133,133,133,0.5);
        -moz-box-shadow: 0px 0px 25px 0px rgba(133,133,133,0.5);
        box-shadow: 0px 0px 25px 0px rgba(133,133,133,0.5);
        .more {
          display: block;
        }
      }
      h3 {
        font-family: 'Montserrat', sans-serif;
        font-size: 16px;
        font-weight: 600;
        padding: 20px 0px;
      }
      p {
        font-family: 'Open Sans', sans-serif;
        font-size: 13px;
        width: 220px;
        color: #6E6E6E;
        margin-bottom: 20px;
      }
      .more {
        display: none;
        font-family: 'Montserrat', sans-serif;
        font-size: 13px;
        position: absolute;
        bottom: 20px;
        left: 35%;
        right: 0;
        background-color: #DF3435;
        color: white;
        padding: 8px 30px;
        border-radius: 5px;
      }
    }
  }
  .partners {
    height: auto;
    width: 100%;
    padding: 80px 20px;
    color: black;
    text-align: center;
    h2 {
      display: inline-block;
      margin-right: 25px;
      font-family: 'Montserrat', sans-serif;
      font-size: 20px;
      font-weight: 600;
    }
  }
}