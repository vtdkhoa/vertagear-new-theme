{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/vertagear.myshopify.com/products/edit-field/47700
{% endcomment %}
{% if product.metafields.custom_fields["product_adjustability_slider"] != blank %}
  <div class="custom-field custom-field__product-adjustability-slider custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Adjustability Slider</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign product_adjustability_slide_array = product.metafields.custom_fields["product_adjustability_slide"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_adjustability_slider"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__product-adjustability-slide">
            {{ product_adjustability_slide_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}