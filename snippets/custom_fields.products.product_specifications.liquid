{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/vertagear.myshopify.com/products/edit-field/47476
{% endcomment %}
{% if product.metafields.custom_fields["product_specifications"] != blank %}
  <div class="custom-field custom-field__product-specifications custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Specifications</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign product_specification_type_array = product.metafields.custom_fields["product_specification_type"] | split: separator %}
      {% assign product_specification_details_array = product.metafields.custom_fields["product_specification_details"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_specifications"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__product-specification-type">
            {{ product_specification_type_array[index] }}
          </div>
          <div class="fc-field field__product-specification-details">
            {{ product_specification_details_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}