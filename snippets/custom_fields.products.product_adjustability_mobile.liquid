{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/vertagear.myshopify.com/products/edit-field/47481
{% endcomment %}
{% if product.metafields.custom_fields["product_adjustability_mobile"] != blank %}
  <div class="custom-field custom-field__product-adjustability-mobile custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Adjustability Mobile</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign product_adjustability_mobile_t_array = product.metafields.custom_fields["product_adjustability_mobile_t"] | split: separator %}
      {% assign product_adjustability_mobile_d_array = product.metafields.custom_fields["product_adjustability_mobile_d"] | split: separator %}
      {% assign product_adjustability_mobile_i_array = product.metafields.custom_fields["product_adjustability_mobile_i"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_adjustability_mobile"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__product-adjustability-mobile-t">
            {{ product_adjustability_mobile_t_array[index] }}
          </div>
          <div class="fc-field field__product-adjustability-mobile-d">
            {{ product_adjustability_mobile_d_array[index] }}
          </div>
          <div class="fc-field field__product-adjustability-mobile-i">
            {{ product_adjustability_mobile_i_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}