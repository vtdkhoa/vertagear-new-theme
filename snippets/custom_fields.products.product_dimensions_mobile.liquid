{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/vertagear.myshopify.com/products/edit-field/47479
{% endcomment %}
{% if product.metafields.custom_fields["product_dimensions_mobile"] != blank %}
  <div class="custom-field custom-field__product-dimensions-mobile custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Dimensions Mobile</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign product_dimension_image_array = product.metafields.custom_fields["product_dimension_image"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["product_dimensions_mobile"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__product-dimension-image">
            {{ product_dimension_image_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}