      {% for block in review_blocks %}
        {% assign tab = block.settings.product_title %}
        {% unless tabs contains tab %}
        {% assign tabs = tabs | append: tab | append: "," %}
        {% endunless %}
      {% endfor %}
      {% assign tabs = tabs | split: "," %}
      {% for tab in tabs %}
      <div class="press-reviews_tab {% if forloop.index0 == 0 %}active{% endif %}" data-tab="{{ tab }}">
