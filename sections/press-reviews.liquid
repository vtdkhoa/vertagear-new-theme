<div class="press-reviews">
  <div class="press-reviews_container">
    <div class="page-title">
      {{ page.title }}
    </div>
    <div class="product-review-tabs">
      {% assign product_blocks = section.blocks | where: 'type','product' %}
      {% for block in product_blocks %}
        <div class="product-reviews-tab {% if forloop.index0 == 0 %}active{% endif %}" data-tab="{{ block.settings.product_title }}">
          <div class="product_title">{{ block.settings.product_title }}</div>
          <div class="product_image">
            <img src="{{ block.settings.product_image | img_url: '48x' }}">
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="from-press_desktop">
      <div class="press-review_title">
        {{ section.settings.title }}
      </div>
      {% assign review_blocks = section.blocks | where: 'type','review' %}
