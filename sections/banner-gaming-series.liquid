<script>
  $(document).ready(function(){
    $('.expand-content').hide();
    $('.expand-area').click(function(){
      $(this).toggleClass("active");
      if ($(this).hasClass("active"))
        $(this).html("<i class='fa fa-angle-double-down fa-2x' aria-hidden='true'></i>");
      else
        $(this).html("<i class='fa fa-angle-double-up fa-2x' aria-hidden='true'></i>");
      
      $(this).parent('.expand-container').find('.expand-content').slideToggle();
    });
  });
</script>