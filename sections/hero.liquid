    a.scroll{
      background-color: #000;
    }
    .promotion-earlyaccessblackfriday{
      background-size: contain;
      background-position: center;
      background-color: #000;
      background-repeat: no-repeat;
    }
    .promotion-earlyaccessblackfriday .desktop{
      display: flex;
    }
    .promotion-earlyaccessblackfriday .desktop .responsive-image__wrapper {
      width: 100%;
    }
    .promotion-earlyaccessblackfriday .ipad,.promotion-earlyaccessblackfriday .mobile{
      display: none;
    }
  }
  @media only screen and (min-width: 992px) and (max-width: 1920px){
    {% if section.settings.type_media == "image" %}
    .promotion-earlyaccessblackfriday{
      background-size: contain;
      background-position: center;
      background-color: #000;
      background-repeat: no-repeat;
    }
    {% endif %}
    .promotion-earlyaccessblackfriday .desktop{
      display: flex;
    }
    .promotion-earlyaccessblackfriday .desktop .responsive-image__wrapper{
      width: 100%;
    }
    .promotion-earlyaccessblackfriday .ipad,.promotion-earlyaccessblackfriday .mobile{
      display: none;
    }
  }
  @media only screen and (min-width: 768px) and (max-width: 991px){
