  .ld-modal__btn {
    width: 100%;
    padding: 14px;
    background: #4E4CF7;
    color: white;
    font-weight: bold;
    font-size: 20px;	
  }
  
  @media only screen and (min-width: 1366px) {
    .ld-modal {	
      padding-top: 80px;
