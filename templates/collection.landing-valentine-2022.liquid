<script>
  const disableBodyScroll = () => {
  	document.body.style.overflow = "hidden";
  }
  const unsetBodyScroll = () => {
  	document.body.style.overflow = "unset";
  }
  const ldCollectionForHimBanner = document.getElementById("ldColletionForHimBanner");
  const ldCollectionForHimModal = document.getElementById("ldModalHim");
  const ldCollectionForHerBanner = document.getElementById("ldColletionForHerBanner");
  const ldCollectionForHerModal = document.getElementById("ldModalHer");
  const ldCollectionForCoupleBanner = document.getElementById("ldColletionForCoupleBanner");
  const ldCollectionForCoupleModal = document.getElementById("ldModalCouple");
  
  ldCollectionForHimBanner.onclick = () => {
    ldCollectionForHimModal.style.display = "block";
    disableBodyScroll();
  }
  
  ldCollectionForHerBanner.onclick = () => {
    ldCollectionForHerModal.style.display = "block";
    disableBodyScroll();
  }
  
  ldCollectionForCoupleBanner.onclick = () => {
    ldCollectionForCoupleModal.style.display = "block";
    disableBodyScroll();
  }
  
  const ldModalCloseBtnHim = document.getElementById("ldModalCloseBtnHim");
  ldModalCloseBtnHim.onclick = () => {
    ldCollectionForHimModal.style.display = "none";
    unsetBodyScroll();
  }
  const ldModalCloseBtnHer = document.getElementById("ldModalCloseBtnHer");
  ldModalCloseBtnHer.onclick = () => {
    ldCollectionForHerModal.style.display = "none";
    unsetBodyScroll();
  }
  const ldModalCloseBtnCouple = document.getElementById("ldModalCloseBtnCouple");
  ldModalCloseBtnCouple.onclick = () => {
    ldCollectionForCoupleModal.style.display = "none";
    unsetBodyScroll();
  }
  
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == ldCollectionForHimModal) {
      ldCollectionForHimModal.style.display = "none";
      unsetBodyScroll();
    } else if (event.target == ldCollectionForHerModal) {
      ldCollectionForHerModal.style.display = "none";
      unsetBodyScroll();
    } else if (event.target == ldCollectionForCoupleModal) {
      ldCollectionForCoupleModal.style.display = "none";
      unsetBodyScroll();
    }
  }
</script>

