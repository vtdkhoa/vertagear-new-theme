    }
    
    .ld-modal__content {
      height: 100%;
      padding: 20px 60px;
      width: 90%;
    }
    
    .ld-modal__title {
      font-size: 30px;
      height: 7%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .ld-modal__promo-text {
      font-size: 16px;
      height: 5%;
    }
    
    .ld-modal-btn-container {
      height: 7%;
      position: unset;
    }
    .ld-modal__btn {
      color: #4E4CF7;
      background: white;
      border: 1px solid #4E4CF7;
      height: 100%;
      padding: 0;
    }
    .ld-modal__btn:hover {
      background: #4E4CF7;
    	color: white;
      border: none;
    }
    
