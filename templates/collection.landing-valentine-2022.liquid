<style>
  .ld-max-width {
  	max-width: 1200px;
    margin: auto;
  }
  .ld-modal {
    display: none;
    position: fixed;
    z-index: 1000000;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh; 
    overflow-y: scroll;
    background-color: rgba(0,0,0,0.4);
    padding-top: 75px;
  }
  
  .ld-modal__content {
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    max-width: 1400px;
  }
  
  .ld-modal__title {
    font-weight: bold;
    font-size: 18px;
    text-align: center;
    color: #3A4C55;
  }
  
  .ld-modal__promo-text {
    font-size: 15px;
    text-align: center;
    color: #4E4CF7;
    background: rgba(40, 85, 201, 0.08);
